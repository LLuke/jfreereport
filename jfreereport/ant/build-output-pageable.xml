<!-- An ANT build file for JFreeReport -->

<!-- This file builds all parser and writer modules. -->

<project name="jfreereport" default="all" basedir="..">

  <target name="init">
    <dirname property="antfile.dir" file="${ant.file}"/>
    <ant antfile="${antfile.dir}/build-core.xml" target="init"/>
    <property file="${antfile.dir}/build.properties"/>

    <antcall target="rebuild-core"/>
  </target>

  <target name="check-core">
    <available file="${core-jar-file}" type="file" property="core-jar-file-present"/>
  </target>

  <target name="rebuild-core" unless="core-jar-file-present" depends="check-core" >
    <echo>
      Rebuilding core ...
    </echo>
    <dirname property="antfile.dir" file="${ant.file}"/>
    <ant antfile="${antfile.dir}/build-core.xml" target="all"/>
  </target>


  <!-- ************************************************************** -->
  <!--                                                                -->
  <!--  Pageable Output base module                                   -->
  <!--                                                                -->
  <!--  Depends on: Core task                                         -->
  <!-- ************************************************************** -->

  <target name="compile-module-output-pageable-base" depends="init">
    <description>
      Compiles the pageable output target base module.
    </description>

    <!-- create a temp build directory -->
    <mkdir dir="build"/>

    <!-- compile the source -->
    <javac srcdir="source"
      destdir="build"
      deprecation="${build.deprecation}" debug="${build.debug}" optimize="${build.optimize}">
      <include name="org/jfree/report/modules/output/pageable/base/**"/>
      <classpath>
        <pathelement location="${libdir}/${jcommon-jar-file}" />
        <pathelement location="${libdir}/${pixie-jar-file}" />
        <pathelement location="${core-jar-file}"/>
      </classpath>
    </javac>

    <antcall target="copy-resources-output-pageable-base" inheritAll="true"/>

    <!-- make the jar -->
    <jar jarfile="${module-output-pageable-base-file}"
         basedir="build">
      <manifest>
          <attribute name="Class-Path" value="${core-jar-file}"/>
      </manifest>
    </jar>

    <!-- delete the temp directory -->
    <delete dir="build" />
  </target>

  <target name="copy-resources-output-pageable-base">
    <copy file="source/org/jfree/report/modules/output/pageable/base/module.properties"
      tofile="build/org/jfree/report/modules/output/pageable/base/module.properties"/>
  </target>

  <!-- ************************************************************** -->
  <!--                                                                -->
  <!--  Pageable pdf output module                                    -->
  <!--                                                                -->
  <!--  Depends on: Core task                                         -->
  <!-- ************************************************************** -->

  <target name="check-module-output-support-itext" depends="init">
    <available file="${module-output-support-itext-file}" property="module-output-support-itext-file-present"/>
  </target>

  <target name="rebuild-module-output-support-itext" unless="module-output-support-itext-file-present" depends="check-module-output-support-itext">
    <dirname property="antfile.dir" file="${ant.file}"/>
    <ant antfile="${antfile.dir}/build-output-misc.xml" target="compile-module-output-support-itext"/>
  </target>

  <target name="init-module-output-pageable-pdf" depends="init" >
    <available file="${libdir}/${itext-jar-file}" property="itext-jar-file-present"/>
    <fail unless="itext-jar-file-present">
      The file ${itext-jar-file} was not found in the lib directory.
      This file is required for PDF and RTF output.
    </fail>
  </target>

  <target name="compile-module-output-pageable-pdf"
    depends="init-module-output-pageable-pdf,
    compile-module-output-pageable-base,
    rebuild-module-output-support-itext">
    <description>
      Compiles the PDF pageable output module.
    </description>

    <!-- create a temp build directory -->
    <mkdir dir="build"/>

    <!-- compile the source -->
    <javac srcdir="source"
      destdir="build"
      deprecation="${build.deprecation}" debug="${build.debug}" optimize="${build.optimize}">
      <include name="org/jfree/report/modules/output/pageable/pdf/*"/>
      <classpath>
        <pathelement location="${libdir}/${jcommon-jar-file}" />
        <pathelement location="${libdir}/${pixie-jar-file}" />
        <pathelement location="${libdir}/${itext-jar-file}" />
        <pathelement location="${core-jar-file}"/>
        <pathelement location="${module-output-pageable-base-file}"/>
        <pathelement location="${module-output-support-itext-file}"/>
      </classpath>
    </javac>

    <antcall target="copy-resources-output-pageable-pdf" inheritAll="true"/>

    <!-- make the jar -->
    <jar jarfile="${module-output-pageable-pdf-file}"
         basedir="build">
      <manifest>
          <attribute name="Class-Path" value="${core-jar-file} ${module-output-support-itext-file} ${module-output-pageable-base-file} "/>
      </manifest>
    </jar>

    <!-- delete the temp directory -->
    <delete dir="build" />
  </target>

  <target name="copy-resources-output-pageable-pdf">
    <copy file="source/org/jfree/report/modules/output/pageable/pdf/module.properties"
      tofile="build/org/jfree/report/modules/output/pageable/pdf/module.properties"/>

    <copy file="source/org/jfree/report/modules/output/pageable/pdf/configuration.properties"
      tofile="build/org/jfree/report/modules/output/pageable/pdf/configuration.properties"/>
  </target>

  <!-- ************************************************************** -->
  <!--                                                                -->
  <!--  Pageable Graphics2D output  module                            -->
  <!--                                                                -->
  <!--  Depends on: Core task                                         -->
  <!-- ************************************************************** -->

  <target name="compile-module-output-pageable-graphics" depends="compile-module-output-pageable-base">
    <description>
      Compiles the Graphics2D table output module.
    </description>

    <!-- create a temp build directory -->
    <mkdir dir="build"/>

    <!-- compile the source -->
    <javac srcdir="source"
      destdir="build"
      deprecation="${build.deprecation}" debug="${build.debug}" optimize="${build.optimize}">
      <include name="org/jfree/report/modules/output/pageable/graphics/*"/>
      <classpath>
        <pathelement location="${libdir}/${jcommon-jar-file}" />
        <pathelement location="${libdir}/${pixie-jar-file}" />
        <pathelement location="${core-jar-file}"/>
        <pathelement location="${module-output-pageable-base-file}"/>
      </classpath>
    </javac>

    <antcall target="copy-resources-output-pageable-graphics" inheritAll="true"/>

    <!-- make the jar -->
    <jar jarfile="${module-output-pageable-graphics-file}"
         basedir="build">
      <manifest>
          <attribute name="Class-Path" value="${core-jar-file} ${module-output-pageable-base-file}"/>
      </manifest>
    </jar>

    <!-- delete the temp directory -->
    <delete dir="build" />
  </target>

  <target name="copy-resources-output-pageable-graphics">
    <copy file="source/org/jfree/report/modules/output/pageable/graphics/module.properties"
      tofile="build/org/jfree/report/modules/output/pageable/graphics/module.properties"/>
  </target>

  <!-- ************************************************************** -->
  <!--                                                                -->
  <!--  Pageable plaintext output  module                             -->
  <!--                                                                -->
  <!--  Depends on: Core task                                         -->
  <!-- ************************************************************** -->

  <target name="compile-module-output-pageable-plaintext" depends="compile-module-output-pageable-base">
    <description>
      Compiles the pageable PlainText output module.
    </description>

    <!-- create a temp build directory -->
    <mkdir dir="build"/>

    <!-- compile the source -->
    <javac srcdir="source"
      destdir="build"
      deprecation="${build.deprecation}" debug="${build.debug}" optimize="${build.optimize}">
      <include name="org/jfree/report/modules/output/pageable/plaintext/*"/>
      <classpath>
        <pathelement location="${libdir}/${jcommon-jar-file}" />
        <pathelement location="${libdir}/${pixie-jar-file}" />
        <pathelement location="${core-jar-file}"/>
        <pathelement location="${module-output-pageable-base-file}"/>
      </classpath>
    </javac>

    <antcall target="copy-resources-output-pageable-plaintext" inheritAll="true"/>

    <!-- make the jar -->
    <jar jarfile="${module-output-pageable-plaintext-file}"
         basedir="build">
      <manifest>
          <attribute name="Class-Path" value="${core-jar-file} ${module-output-pageable-base-file}"/>
      </manifest>
    </jar>

    <!-- delete the temp directory -->
    <delete dir="build" />
  </target>

  <target name="copy-resources-output-pageable-plaintext">
    <copy file="source/org/jfree/report/modules/output/pageable/plaintext/module.properties"
      tofile="build/org/jfree/report/modules/output/pageable/plaintext/module.properties"/>

    <copy file="source/org/jfree/report/modules/output/pageable/plaintext/configuration.properties"
      tofile="build/org/jfree/report/modules/output/pageable/plaintext/configuration.properties"/>
  </target>

  <!--
    This target is called from build-all
    -->
  <target name="copy-resources"
    depends="copy-resources-output-pageable-base,
    copy-resources-output-pageable-pdf,
    copy-resources-output-pageable-plaintext,
    copy-resources-output-pageable-graphics" />

  <target name="compile"
    depends="compile-module-output-pageable-base,
    compile-module-output-pageable-pdf,
    compile-module-output-pageable-plaintext,
    compile-module-output-pageable-graphics"/>

  <target name="all" depends="init, compile"/>

</project>