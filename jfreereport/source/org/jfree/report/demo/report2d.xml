<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple"
                        "http://jfreereport.sourceforge.net/report.dtd">
<report name="Sample Report 2" pageformat="A4" topmargin="70" leftmargin="70" bottommargin="70" rightmargin="70">

  <!-- PAGE HEADER -->
  <pageheader height="32" onlastpage="false" onfirstpage="true" fontname="Serif" fontstyle="bold" fontsize="10">
    <line x1="0" y1="30" x2="0" y2="30" weight="0.5"/>
    <label x="0" y="12" width="100%" height="20" alignment="center">PAGE HEADER</label>
    <string-field fieldname="pageXofY" x="50%" y="0" width="50%" height="10" alignment="right"/>
  </pageheader>

  <!-- PAGE FOOTER -->
  <pagefooter height="24" onfirstpage="true" onlastpage="true" fontname="Serif" fontstyle="plain" fontsize="9">
    <line x1="0" y1="4" x2="0" y2="4" weight="0.5"/>
    <date-field fieldname="report.date" format="d-MMM-yyyy" x="0" y="4" width="100" height="18" alignment="left"/>
    <string-field fieldname="pageXofY" x="50%" y="4" width="50%" height="18" alignment="right"/>
  </pagefooter>

  <!-- GROUPS -->
  <groups>

    <!-- FIRST GROUP -->
    <group name="Letter Group">

      <!-- GROUP HEADER -->
      <groupheader height="20" fontname="Monospaced" fontstyle="bold" fontsize="9" pagebreak="true" repeat="true">
        <label x="0" y="1" width="120" height="9" alignment="left">LETTER GROUP:</label>
        <string-field x="120" y="1" width="76" height="9" alignment="left" fieldname="Letter"/>
        <line x1="0" y1="12" x2="0" y2="12" weight="0.25"/>
        <line x1="0" y1="14" x2="0" y2="14" weight="0.25"/>
      </groupheader>

      <!-- GROUP FOOTER -->
      <groupfooter height="18" fontname="Monospaced" fontstyle="bold" fontsize="9" pagebreak-after-print="true" >
        <label x="0" y="2" width="100%" height="12" alignment="left">Total for letter:</label>
        <number-field fieldname="Sum2" format="#,##0.00" x="276" y="2" width="176" height="12" alignment="right"/>
      </groupfooter>

      <!-- GROUP FIELDS -->
      <fields>
        <field>Letter</field>
      </fields>

    </group>

    <!-- SECOND GROUP -->
    <group name="Color Group">

      <!-- GROUP HEADER -->
      <groupheader height="18" fontname="Monospaced" fontstyle="bold" fontsize="9" repeat="true" >
        <label x="0" y="1" width="120" height="9" alignment="left">Color Group:</label>
        <string-field x="124" y="1" width="76" height="9" alignment="left" fieldname="Color"/>
        <line x1="0" y1="12" x2="0" y2="12" weight="0.25"/>
      </groupheader>

      <!-- GROUP FOOTER -->
      <groupfooter height="18" fontname="Monospaced" fontstyle="bold" fontsize="9">
        <line x1="0" y1="1" x2="0" y2="1" weight="0.25"/>
        <label x="0" y="3" width="150" height="12" alignment="left">Subtotal for color:</label>
        <number-field fieldname="Sum1" format="#,##0.00" x="276" y="3" width="176" height="12" alignment="right"/>
      </groupfooter>

      <!-- GROUP FIELDS -->
      <fields>
        <field>Letter</field>
        <field>Color</field>
      </fields>

    </group>

  </groups>
  <!-- ITEMS -->
  <items height="10" fontname="Monospaced" fontstyle="plain" fontsize="8">
    <!-- This will draw the table cell borders ... -->
    <rectangle name="NameBorder" x="0" y="0" width="110" height="10" color="black" fill="false" draw="true" />
    <rectangle name="Count1Border" x="110" y="0" width="40" height="10" color="black" fill="false" draw="true" />
    <rectangle name="LetterBorder" x="150" y="0" width="74" height="10" color="black" fill="false" draw="true" />
    <rectangle name="ColorBorder" x="224" y="0" width="76" height="10" color="black" fill="false" draw="true" />
    <rectangle name="IntegerBorder" x="300" y="0" width="76" height="10" color="black" fill="false" draw="true" />
    <rectangle name="DoubleBorder" x="376" y="0" width="76" height="10" color="black" fill="false" draw="true" />

    <!-- width reduced to 110 (former value 140) -->
    <string-field x="0" y="0" width="110" height="8" alignment="left" fieldname="Name"/>
    <number-field x="110" y="0" width="40" height="8" alignment="right" format="0" fieldname="Count1"/>
    <string-field x="160" y="0" width="60" height="8" alignment="left" fieldname="Letter"/>
    <string-field x="224" y="0" width="76" height="8" alignment="left" fieldname="Color"/>
    <number-field x="300" y="0" width="76" height="8" alignment="right" format="#,##0" fieldname="Integer"/>
    <number-field x="376" y="0" width="76" height="8" alignment="right" format="#,##0.00" fieldname="DoubleEx"/>
  </items>
  <!-- FUNCTIONS -->
  <functions>
    <property-ref name="report.date"/>
    <function name="Count1" class="org.jfree.report.function.ItemCountFunction">
      <properties>
        <property name="group">Color Group</property>
      </properties>
    </function>

    <function name="Count2" class="org.jfree.report.function.ItemCountFunction">
      <properties>
        <property name="group">Letter Group</property>
      </properties>
    </function>
    <function name="Sum1" class="org.jfree.report.function.TotalGroupSumFunction">
      <properties>
        <property name="field">Double</property>
        <property name="group">Color Group</property>
      </properties>
    </function>
    <function name="Sum2" class="org.jfree.report.function.TotalGroupSumFunction">
      <properties>
        <property name="field">Double</property>
        <property name="group">Letter Group</property>
      </properties>
    </function>

    <function name="PageNumber" class="org.jfree.report.function.PageFunction">
      <!--
        Activating this property counts the pages needed for the given group.
        Only usefull with manual pagebreaks

        <properties>
            <property name="group">Letter Group</property>
        </properties>
        -->
    </function>
    <function name="PageTotal" class="org.jfree.report.function.PageTotalFunction">
      <!--
        Activating this property counts the pages needed for the given group.
        Only usefull with manual pagebreaks

        <properties>
            <property name="group">Letter Group</property>
        </properties>
       -->
    </function>
    <expression name="pageXofY" class="org.jfree.report.function.TextFormatExpression">
      <properties>
        <property name="pattern">Page {0} of {1}</property>
        <property name="0">PageNumber</property>
        <property name="1">PageTotal</property>
      </properties>
    </expression>

    <expression name="DoubleEx" class="org.jfree.report.modules.misc.beanshell.BSHExpression">
      <properties>
        <property name="expression">
Object getValue()
{
  // dataRow is null before the function is initialized
  if (dataRow == null)
  {
    return null;
  }
  return dataRow.get ("Double");
}
        </property>
      </properties>
    </expression>

  </functions>

</report>
