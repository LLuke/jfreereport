<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple/version 0.8.5"
                        "http://jfreereport.sourceforge.net/report-085.dtd">

<report name="ReportProperty Demo (Using the stacked layout)" pageformat="A4">

  <!-- REPORT HEADER -->
  <!-- This band appears once at the beginning of the report. -->
  <reportheader height="35"
    fontname="SansSerif" fontstyle="plain" fontsize="10">

    <rectangle x="0" y="0" width="100%" height="100%"
      color="#FFCCCC" weight="0"/>

    <rectangle x="0" y="0" width="100%" height="100%"
      color="#CCCCCC" weight="0" draw="true" fill="false"/>

    <!--
      Due to a bug in the static layout manager (Not fixable right now),
      subbands should always start at (0,0) and span the complete width
      -->
    <band layout="org.jfree.report.layout.StackedLayoutManager" layout-cachable="false">
      <string-field fontstyle="bold" fontsize="18"
        width="100%" height="18"
        alignment="left" fieldname="Message1" dynamic="true"/>

      <string-field fontstyle="bold" fontsize="18"
        width="100%" height="18"
        alignment="left" fieldname="Message2" dynamic="true"/>
    </band>
  </reportheader>

  <functions>
    <!-- This will mark the property to be included in the datarow -->
    <property-ref name="Message1"/>
    <property-ref name="Message2"/>
  </functions>
</report>
