<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple/version 0.8.5"
                        "http://jfreereport.sourceforge.net/report-085.dtd">
<!--
  The Drawable and Shape-Elements are experimental and no official part of the
  0.8.1 release. These are features of the upcomming 0.8.2 release.
-->
<report name="Shape and Drawable Demo" orientation="portrait" pageformat="LETTER" topmargin="72" leftmargin="72" bottommargin="72" rightmargin="72">

  <reportheader height="60">
    <rectangle x="0" y="0" width="100%" height="100" color="blue" draw="true" fill="false" stroke-style="dotted"/>
    <rectangle x="15" y="15" width="100" height="25" color="yellow"/>
    <shape-field x="15" y="15" width="100%" height="30" fieldname="shapecreator" color="green"/>
    <label name="Label1" x="15" y="15" width="100%" height="20" vertical-alignment="top">Hello World :)</label>
    <label name="Label2" x="115" y="30" width="100%" height="20" vertical-alignment="top">I love shapes :)</label>
  </reportheader>

  <reportfooter height="50">
    <drawable-field x="15" y="15" width="100%" height="30" fieldname="drawable"/>
  </reportfooter>

  <functions>
    <expression name="drawable" class="org.jfree.report.modules.misc.beanshell.BSHExpression">
      <properties>
        <property name="expression">
          import org.jfree.report.demo.helper.DemoDrawable;

          Object getValue()
          {
          return new DemoDrawable();
          }
        </property>
      </properties>
    </expression>
    <expression name="shapecreator" class="org.jfree.report.modules.misc.beanshell.BSHExpression">
      <properties>
        <property name="expression">
          import java.awt.geom.*;

          Object getValue()
          {
          return new RoundRectangle2D.Float(100,15,40,20, 5,5);
          }
        </property>
      </properties>
    </expression>
  </functions>
</report>
