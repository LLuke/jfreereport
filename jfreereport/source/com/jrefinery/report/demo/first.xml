<?xml version="1.0" encoding="iso-8859-1"?>
<!--
 This DOCType declaration is valid, uncomment it to validate the report
 -->
<!--
<!DOCTYPE report SYSTEM "http://jfreereport.sourceforge.net/report.dtd">
-->

<report name="First Report" orientation="portrait" pageformat="LETTER" topmargin="72" leftmargin="72" bottommargin="72" rightmargin="72">

  <!-- REPORT CONFIGURATION -->
  <!-- You can use this section to configure various report characteristics. -->
  <configuration>
    <property name="com.jrefinery.report.preview.PreferredWidth">640</property>
    <property name="com.jrefinery.report.preview.PreferredHeight">480</property>
  </configuration>

  <!-- REPORT HEADER -->
  <!-- This band appears once at the beginning of the report.  In this example, -->
  <!-- the header contains five labels. -->
  <reportheader height="112" fontname="SansSerif" fontstyle="plain" fontsize="10">
    <label fontstyle="bold" fontsize="18" x="0" y="2" width="100%" height="18" alignment="center">Java Look and Feel Graphics Repository</label>
    <label x="0" y="32" width="100%" height="10" alignment="left">This report lists the icons contained in the Java Look and Feel Graphics Repository.</label>
    <label x="0" y="44" width="100%" height="10" alignment="left">For more information about the repository, refer to:</label>
    <label x="20" y="68" width="100%" height="10" alignment="left" fontname="Monospaced" fontsize="9">http://developer.java.sun.com/developer/techDocs/hi/repository/</label>
    <label x="0" y="92" width="100%" height="10" alignment="left">The design of this report is described in the JFreeReport PDF documentation.</label>
  </reportheader>
  <!-- REPORT FOOTER -->
  <!-- Displays item count and total bytes for icons listed in the report. -->
  <reportfooter height="30" fontname="SansSerif" fontstyle="bold" fontsize="12">
    <rectangle x="0" y="0" width="100%" height="100%" color="#CCFFCC" weight="0" />
    <line x1="0" y1="0" x2="0" y2="0" weight="0.5" />
    <line x1="0" y1="30" x2="0" y2="30" weight="0.5" />
    <label x="0" y="10" width="100%" height="12" alignment="left">REPORT TOTAL:</label>
    <number-field fieldname="OverallCount" format="0" x="240" y="10" width="64" height="9" alignment="center" />
    <number-field fieldname="OverallSum" format="#,##0" x="0" y="10" width="100%" height="9" alignment="right" />
  </reportfooter>
  <!-- PAGE HEADER -->
  <!-- Displays the report name and date. -->
  <!-- Suppressed on the first page to avoid duplication with report header. -->
  <pageheader height="18" onfirstpage="false" fontname="SansSerif" fontstyle="bold" fontsize="9">
    <rectangle x="0" y="0" width="100%" height="100%" color="#AFAFAF" weight="0" />
    <label x="0" y="0" width="200" height="14" alignment="left">Java Look and Feel Graphics Repository</label>
    <date-field x="0" y="0" width="100%" height="14" alignment="right" format="d-MMM-yyyy" fieldname="report.date" />
    <line x1="0" y1="16" x2="0" y2="16" color="#CFCFCF" weight="2.0" />
  </pageheader>
  <!-- PAGE FOOTER -->
  <!-- Displays the page number, centered at the bottom of the page. -->
  <pagefooter height="14" onfirstpage="true" onlastpage="true" fontname="SansSerif" fontstyle="plain" fontsize="9">
    <number-field fieldname="PageNumber" format="Page 0" x="0" y="3" width="100%" height="9" alignment="center" nullstring="hull" />
  </pagefooter>
  <!-- GROUPS -->
  <!-- Data items are grouped by category. -->
  <groups>
    <!-- Category Group -->
    <group name="Category">
      <groupheader height="30" fontname="SansSerif" fontstyle="bold" fontsize="12" pagebreak="false">
        <rectangle x="0" y="0" width="100%" height="100%" color="#CCCCFF" weight="0" />
        <line x1="0" y1="0" x2="0" y2="0" weight="0.5" />
        <line x1="0" y1="30" x2="0" y2="30" weight="0.5" />
        <label x="0" y="3" width="92" height="12" alignment="left">Category:</label>
        <string-field x="96" y="3" width="120" height="12" alignment="left" fieldname="Category" />
        <label fontstyle="italic" fontsize="8" x="0" y="20" width="76" height="9" alignment="left">Name:</label>
        <label fontstyle="italic" fontsize="8" x="260" y="20" width="76" height="9" alignment="left">Icon:</label>
        <label fontstyle="italic" fontsize="8" x="0" y="20" width="100%" height="9" alignment="right">Size:</label>
      </groupheader>
      <groupfooter height="30" fontname="SansSerif" fontstyle="bold" fontsize="11">
        <label x="0" y="5" width="100" height="9" alignment="left">Group Total:</label>
        <number-field fieldname="GroupCount" format="0" x="240" y="5" width="64" height="9" alignment="center" />
        <number-field fieldname="GroupSum" format="#,##0" x="0" y="5" width="100%" height="9" alignment="right" />
      </groupfooter>
      <fields>
        <field>Category</field>
      </fields>
    </group>
  </groups>
  <!-- THE ITEM BAND -->
  <!-- This band is printed once for each row of data in the TableModel. -->
  <items height="26" fontname="SansSerif" fontstyle="plain" fontsize="10">
    <line x1="0" y1="25" x2="0" y2="25" color="#DFDFDF" weight="0.1" />
    <string-field x="0" y="8" width="220" height="10" alignment="left" fieldname="Name" />
    <image-field x="260" y="1" width="24" height="24" fieldname="Icon" />
    <number-field x="0" y="8" width="100%" height="10" alignment="right" format="#,##0" fieldname="Size" />
  </items>
  <!-- FUNCTIONS -->
  <!-- Declares the functions used in this report. -->
  <functions>
    <property-ref name="report.date" />
    <function name="PageNumber" class="com.jrefinery.report.function.PageFunction" />
    <function name="GroupCount" class="com.jrefinery.report.function.ItemCountFunction">
      <properties>
        <property name="field">Name</property>
        <property name="group">Category</property>
      </properties>
    </function>
    <function name="GroupSum" class="com.jrefinery.report.function.ItemSumFunction">
      <properties>
        <property name="field">Size</property>
        <property name="group">Category</property>
      </properties>
    </function>
    <function name="OverallCount" class="com.jrefinery.report.function.ItemCountFunction">
      <properties>
        <property name="field">Name</property>
      </properties>
    </function>
    <function name="OverallSum" class="com.jrefinery.report.function.ItemSumFunction">
      <properties>
        <property name="field">Size</property>
      </properties>
    </function>
  </functions>
</report>