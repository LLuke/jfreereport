<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE report PUBLIC "-//JFreeReport//DTD report definition//EN//simple"
                        "http://jfreereport.sourceforge.net/report.dtd">
<!--
  Defined fields for this TableModel:

  0: "family"   = String;
  1: "name" = String;
  2: "sample"   = String;
-->
<report name="Fonts" pageformat="A4" topmargin="70" leftmargin="70" bottommargin="70" rightmargin="70">
  <groups>
    <group name="fontfamily">
      <groupheader height="16" fontname="SansSerif" fontstyle="plain" fontsize="11">
        <line x1="0" y1="16" x2="0" y2="16" color="#CFCFCF" weight="2.0"/>
        <label x="0" y="0" width="40%" height="100%"
        >Family</label>
        <string-field x="40%" y="0" width="60%" height="100%" alignment="left" fieldname="family"/>
      </groupheader>
      <groupfooter height="18" fontname="Monospaced" fontstyle="bold" fontsize="9">
        <label x="0" y="0" width="80%" height="16" alignment="left">Number of Fonts in this family:</label>
        <number-field x="80%" y="0" width="20%" height="16" alignment="right" format="#,##0" fieldname="Count1"/>
      </groupfooter>
      <fields>
        <field>family</field>
      </fields>
    </group>
  </groups>
  <items height="30" fontname="Monospaced" fontstyle="plain" fontsize="10">
    <string-field x="0" y="0" width="40%" height="50%" alignment="left" fieldname="fontname" />
    <string-field name="SampleElement" x="10%" y="50%" width="90%" height="50%" alignment="left" fieldname="sample"/>
  </items>

  <functions>
    <!-- The fontmod function will change the font of the Element to the fontname specified in field font -->
    <function name="fontmod" class="com.jrefinery.report.demo.FontChangeFunction">
      <properties>
        <property name="element">SampleElement</property>
      </properties>
    </function>
    <function name="Count1" class="com.jrefinery.report.function.ItemCountFunction">
			<properties>
				<property name="group">fontfamily</property>
			</properties>
    </function>
  </functions>

</report>
