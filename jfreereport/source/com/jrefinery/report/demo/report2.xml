<?xml version="1.0" encoding="iso-8859-1"?>
<!--
	<!DOCTYPE report SYSTEM "http://jfreereport.sourceforge.net/report.dtd">
-->

<!--
  ChangeLog:
   2002-May-20: Adjusted the width of 0 to be "100%". The parser does translate values of 0 to
                the full width, but will issue at least a warning. PageFooter adjusted.

-->
<report name="Sample Report 2" pageformat="A4" topmargin="70" leftmargin="70" bottommargin="70" rightmargin="70">

    <!-- REPORT HEADER -->
    <reportheader height="144" fontname="SansSerif" fontstyle="bold" fontsize="18">
        <label name="label1" x="0" y="0" width="100%" height="20" alignment="center">Sample Report Two</label>
        <label name="label2" x="0" y="24" width="100%" height="10" fontsize="10" alignment="center">Generated using JFreeReport (version 0.7.5)</label>
    </reportheader>

    <!-- REPORT FOOTER -->
    <reportfooter height="24" fontname="SansSerif" fontstyle="bold" fontsize="10">
        <label name="label3" x="0" y="0" width="100%" height="20" alignment="center">END OF REPORT</label>
    </reportfooter>

    <!-- PAGE HEADER -->
    <pageheader height="32" onfirstpage="false" fontname="Serif" fontstyle="bold" fontsize="10">
        <line name="line1" x1="0" y1="30" x2="0" y2="30" weight="0.5"></line>
        <label name="label4" x="0" y="0" width="100%" height="20" alignment="center">PAGE HEADER</label>
    </pageheader>

    <!-- PAGE FOOTER -->
    <pagefooter height="24" onfirstpage="true" onlastpage="true" fontname="Serif" fontstyle="italic" fontsize="9">
        <line name="line2" x1="0" y1="4" x2="0" y2="4" weight="0.5"></line>
        <date-function name="date1" function="Date" format="d-MMM-yyyy" x="0" y="4" width="100" height="18" alignment="left"></date-function>
        <number-function name="pagenum1" function="PageNumber" format="Page 0" x="0" y="4" width="100%" height="18" alignment="right"></number-function>
    </pagefooter>

    <!-- GROUPS -->
    <groups>

        <!-- FIRST GROUP -->
        <group name="Letter Group">

	    <!-- GROUP HEADER -->
            <groupheader height="20" fontname="Monospaced" fontstyle="bold" fontsize="9">
                <label name="Label 5" x="0" y="1" width="96" height="9" alignment="left">LETTER GROUP:</label>
                <string-field name="Letter Element" x="96" y="1" width="76" height="9" alignment="left" fieldname="Letter"/>
                <line name="line3" x1="0" y1="12" x2="0" y2="12" weight="0.25"></line>
                <line name="line4" x1="0" y1="14" x2="0" y2="14" weight="0.25"></line>
            </groupheader>

            <!-- GROUP FOOTER -->
            <groupfooter height="18" fontname="Monospaced" fontstyle="bold" fontsize="9">
                <label name="Label 6" x="0" y="0" width="100%" height="12" alignment="left">Total for letter:</label>
                <number-function name="total1" function="Sum2" format="#,##0.00" x="276" y="0" width="176" height="12" alignment="right"></number-function>
            </groupfooter>

	    <!-- GROUP FIELDS -->
            <fields>
                 <field>Letter</field>
            </fields>

        </group>

	<!-- SECOND GROUP -->
        <group name="Color Group">

            <!-- GROUP HEADER -->
            <groupheader height="18" fontname="Monospaced" fontstyle="bold" fontsize="9">
                <label name="Label 7" x="0" y="1" width="120" height="9" alignment="left">Color Group:</label>
                <string-field name="Color Element" x="124" y="1" width="76" height="9" alignment="left" fieldname="Color"/>
                <line name="line1" x1="0" y1="12" x2="0" y2="12" weight="0.25"></line>
            </groupheader>

            <!-- GROUP FOOTER -->
            <groupfooter height="18" fontname="Monospaced" fontstyle="bold" fontsize="9">
                <line name="line1" x1="0" y1="1" x2="0" y2="1" weight="0.25"></line>
                <label name="Label 8" x="0" y="0" width="150" height="12" alignment="left">Subtotal for color:</label>
                <number-function name="total1" function="Sum1" format="#,##0.00" x="276" y="0" width="176" height="12" alignment="right"></number-function>
            </groupfooter>

            <!-- GROUP FIELDS -->
            <fields>
                 <field>Letter</field>
                 <field>Color</field>
            </fields>

        </group>

    </groups>

    <!-- ITEMS -->
    <items height="10" fontname="Monospaced" fontstyle="plain" fontsize="8">
        <string-field name="Name Element" x="0" y="0" width="140" height="8" alignment="left" fieldname="Name"/>
        <number-function name="element1" function="Count1" format="0" x="110" y="0" width="40" height="8" alignment="right"/>
        <string-field name="Letter Element" x="210" y="0" width="60" height="8" alignment="left" fieldname="Letter"/>
        <string-field name="Color Element" x="280" y="0" width="76" height="8" alignment="left" fieldname="Color"/>
        <number-field name="Integer Element" x="300" y="0" width="76" height="8" alignment="right" format="#,##0" fieldname="Integer"/>
        <number-field name="Double Element" x="376" y="0" width="76" height="8" alignment="right" format="#,##0.00" fieldname="Double"/>
    </items>
    <!-- FUNCTIONS -->
    <functions>
	<data-ref name="Integer" class="java.lang.Object"/>
        <function name="Date" class="com.jrefinery.report.function.ReportPropertyFunction">
			<properties>
				<property name="reportProperty">report.date</property>
			</properties>
		</function>
        <function name="PageNumber" class="com.jrefinery.report.function.PageFunction"/>
        <function name="Count1" class="com.jrefinery.report.function.ItemCountFunction">
			<properties>
				<property name="group">Color Group</property>
			</properties>
		</function>

        <function name="Count2" class="com.jrefinery.report.function.ItemCountFunction">
			<properties>
				<property name="group">Letter Group</property>
			</properties>
		</function>
        <function name="Sum1" class="com.jrefinery.report.function.ItemSumFunction">
			<properties>
				<property name="field">Double</property>
				<property name="group">Color Group</property>
			</properties>
		</function>
        <function name="Sum2" class="com.jrefinery.report.function.ItemSumFunction">
			<properties>
				<property name="field">Double</property>
				<property name="group">Letter Group</property>
			</properties>
		</function>

    </functions>

</report>
